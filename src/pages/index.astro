---
import Layout from "@layouts/Layout.astro";

import Link from "@components/Link.astro";
import Bento from "@components/Bento.astro";
import Project from "@components/Project.astro";

import battleSheep from "@pages/projects/battle-sheep/battle-sheep.png";
import gparticles from "@pages/projects/gparticles/gparticles.png";
import doodleDesign from "@pages/projects/doodle-design/doodle-design.png";
import viitevarasto from "@pages/projects/viitevarasto/viitevarasto.png";

import {
  TbBrandGithub,
  TbBrandLinkedin,
  TbMail,
  TbCertificate,
} from "solid-icons/tb";
---

<Layout
  title="Roni Tuohino"
  description="Hey, need a website or service? Hit me up!"
>
  <main id="content">
    <ul class="boxes">
      <Bento class="about">Roni Tuohino</Bento>

      <Bento>
        <ul class="links-content">
          <li>
            <Link
              ariaLabel="My Github profile"
              href="https://github.com/ronituohino"
              class="link"
            >
              <TbBrandGithub class="icon" />
            </Link>
          </li>

          <li>
            <Link
              ariaLabel="My LinkedIn profile"
              href="https://www.linkedin.com/in/ronituohino/"
              class="link"
            >
              <TbBrandLinkedin class="icon" />
            </Link>
          </li>

          <li>
            <Link
              ariaLabel="Send me an email"
              href="mailto:tuohinoroni@gmail.com"
              class="link"
            >
              <TbMail class="icon" />
            </Link>
          </li>

          <li>
            <Link
              ariaLabel="Look at my résumé"
              href="/ronituohino-resume.pdf"
              class="link"
            >
              <TbCertificate class="icon" />
            </Link>
          </li>
        </ul>
      </Bento>

      <Project
        title="Doodle Design"
        slug="doodle-design"
        img={doodleDesign}
        class="doodle-design"
      />

      <Project
        title="Viitevarasto"
        slug="viitevarasto"
        img={viitevarasto}
        class="viitevarasto"
      />

      {
        /*
          <Project title="Ruutu" href="/projects/ruutu" />
        <Project title="Supla" href="/projects/supla" />
        <Project title="Chroniconnect" href="/projects/sanoma" />
        <Project title="SCAS" href="/projects/scas" />
          */
      }

      <Project
        title="Battle Sheep and a really long title with even more content"
        slug="battle-sheep"
        img={battleSheep}
      />
      <Project title="GParticles" slug="gparticles" img={gparticles} />

      <Bento>
        <Link target="_self" href="/projects">Archive</Link>
      </Bento>

      <Bento>
        <Link target="_self" href="/projects">Spotify</Link>
      </Bento>
    </ul>
  </main>
</Layout>

<style>
  main {
    padding: 2px;
  }
  .boxes {
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(6, 1fr);
    gap: 2px;
  }
  @media screen and (min-width: 768px) {
    .boxes {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(4, 1fr);
    }
  }

  .about {
    grid-column: 1 / 3;
    text-align: center;
  }

  .links-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2px;
    min-height: 100%;
    background-color: var(--white);
  }
  .link {
    background-color: var(--black);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  .icon {
    font-size: clamp(1rem, 15vw, 3rem);
    stroke-width: 1.2px;
    color: var(--highlight);
  }

  /* Featured projects */
  .doodle-design {
    grid-row: 2 / span 2;
  }
  .viitevarasto {
    grid-row: 3 / span 2;
  }
</style>
