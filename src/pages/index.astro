---
import Layout from "@layouts/Layout.astro";

import Link from "@components/Link.astro";
import Bento from "@components/Bento.astro";
import Project from "@components/Project.astro";
import { Switch } from "@components/Switch";

import battleSheep from "@pages/projects/battle-sheep/battle-sheep.png";
import gparticles from "@pages/projects/gparticles/gparticles.png";
import doodleDesign from "@pages/projects/doodle-design/doodle-design.png";
import viitevarasto from "@pages/projects/viitevarasto/viitevarasto.png";

import {
  TbBrandGithub,
  TbBrandLinkedin,
  TbMail,
  TbCertificate,
} from "solid-icons/tb";
---

<Layout title="Roni Tuohino" description="Hey, need a website? Hit me up!">
  <main id="content">
    <ul class="boxes">
      <Bento class="about">
        <Link href="/about" target="_self" class="about-content">
          Roni Tuohino
        </Link>
      </Bento>

      <Bento>
        <ul class="socials-content">
          <li>
            <Link
              ariaLabel="My Github profile"
              href="https://github.com/ronituohino"
              class="social-link"
            >
              <TbBrandGithub class="github-icon" />
            </Link>
          </li>

          <li>
            <Link
              ariaLabel="My LinkedIn profile"
              href="https://www.linkedin.com/in/ronituohino/"
              class="social-link"
            >
              <TbBrandLinkedin class="linkedin-icon" />
            </Link>
          </li>

          <li>
            <Link
              ariaLabel="Send me an email"
              href="mailto:tuohinoroni@gmail.com"
              class="social-link"
            >
              <TbMail class="email-icon" />
            </Link>
          </li>
        </ul>
      </Bento>

      <Bento>
        <Switch client:load />
      </Bento>

      <Bento>
        <Link href="/ronituohino-resume.pdf" class="resume-content">
          <TbCertificate class="resume-icon" />
          Résumé
        </Link>
      </Bento>

      <Project
        title="Doodle Design"
        href="/projects/doodle-design"
        img={doodleDesign}
        class="doodle-design"
      />

      <Project
        title="Viitevarasto"
        href="/projects/viitevarasto"
        img={viitevarasto}
        class="viitevarasto"
      />

      {
        /*
          <Project title="Ruutu" href="/projects/ruutu" />
        <Project title="Supla" href="/projects/supla" />
        <Project title="Chroniconnect" href="/projects/sanoma" />
        <Project title="SCAS" href="/projects/scas" />
          */
      }

      <Project
        title="Battle Sheep and so on"
        href="/projects/battle-sheep"
        img={battleSheep}
      />
      <Project
        title="GParticles"
        href="/projects/gparticles"
        img={gparticles}
      />

      <Bento>
        <Link target="_self" href="/projects">Archive</Link>
      </Bento>
    </ul>
  </main>
</Layout>

<style>
  main {
    padding: 0.5rem;
  }
  .boxes {
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(6, 1fr);
    gap: 0.5rem;
  }
  @media screen and (min-width: 374px) {
    main {
      padding: 1rem;
    }
    .boxes {
      gap: 1rem;
    }
  }
  @media screen and (min-width: 768px) {
    .boxes {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: repeat(4, 1fr);
    }
  }

  .about {
    grid-column: 1 / 3;
  }
  .about-content {
    display: block;
    min-height: 100%;
    text-align: center;
    background-color: yellow;
  }

  .socials-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3px;
    min-height: 100%;
    background-color: darkblue;
  }
  .social-link {
    background-color: red;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  .github-icon {
    font-size: 2rem;
  }
  .linkedin-icon {
    font-size: 2rem;
  }
  .email-icon {
    font-size: 2rem;
  }

  /* Featured projects */
  .doodle-design {
    grid-row: 2 / span 2;
  }
  .viitevarasto {
    grid-row: 3 / span 2;
  }

  .resume-content {
    display: flex;
    min-height: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: orangered;
  }
  .resume-icon {
    font-size: 3rem;
    stroke-width: 1.5;
  }
</style>
