---
import Layout from "@layouts/Layout.astro";

import Link from "@components/Link.astro";
import Bento from "@components/Bento.astro";
import Project from "@components/Project.astro";

import battleSheep from "@pages/projects/battle-sheep/battle-sheep.png";
import gparticles from "@pages/projects/gparticles/gparticles.png";
import doodleDesign from "@pages/projects/doodle-design/doodle-design.png";
import viitevarasto from "@pages/projects/viitevarasto/viitevarasto.png";

import {
  FaBrandsGithub,
  FaBrandsLinkedin,
  FaSolidEnvelope,
  FaSolidArrowDown,
} from "solid-icons/fa";
---

<Layout title="Roni Tuohino" description="Hey, need a website? Hit me up!">
  <main id="content">
    <ul class="boxes">
      <Bento class="about">
        <Link
          href="/about"
          target="_self"
          variant="unstyled"
          class="about-content"
        >
          Roni Tuohino
        </Link>
      </Bento>

      <Bento>
        <ul class="socials">
          <li class="github">
            <Link
              variant="icon"
              ariaLabel="My github profile"
              href="https://github.com/ronituohino"
            >
              <FaBrandsGithub class="github-icon" />
            </Link>
          </li>

          <li class="linkedin">
            <Link
              variant="icon"
              ariaLabel="My linkedin profile"
              href="https://www.linkedin.com/in/ronituohino/"
            >
              <FaBrandsLinkedin class="linkedin-icon" />
            </Link>
          </li>

          <li class="email">
            <Link
              variant="icon"
              ariaLabel="Send me an email"
              href="mailto:tuohinoroni@gmail.com"
            >
              <FaSolidEnvelope class="email-icon" />
            </Link>
          </li>
        </ul>
      </Bento>

      <Bento>Switches</Bento>

      <Bento>
        <Link variant="button" href="/ronituohino-resume.pdf">
          <FaSolidArrowDown class="resume-icon" />
          Résumé
        </Link>
      </Bento>

      <Bento>Archive</Bento>

      <Project
        title="Doodle Design"
        href="/projects/doodle-design"
        img={doodleDesign}
      />

      <Project
        title="Viitevarasto"
        href="/projects/viitevarasto"
        img={viitevarasto}
      />

      {
        /*
          <Project title="Ruutu" href="/projects/ruutu" />
        <Project title="Supla" href="/projects/supla" />
        <Project title="Chroniconnect" href="/projects/sanoma" />
        <Project title="SCAS" href="/projects/scas" />
          */
      }

      <Project
        title="Battle Sheep and so on"
        href="/projects/battle-sheep"
        img={battleSheep}
      />
      <Project
        title="GParticles"
        href="/projects/gparticles"
        img={gparticles}
      />
    </ul>

    <Bento><Link target="_self" href="/projects">Archive</Link></Bento>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    padding: 0 var(--content-padding);
  }
  .boxes {
    --min-size: 11.467rem;
    --max-size: 11.467rem;
    display: grid;
    justify-content: center;
    grid-template-columns: repeat(
      auto-fit,
      minmax(var(--min-size), var(--max-size))
    );
    grid-gap: 1rem;
  }
  .about {
    grid-column: 1 / 3;
  }
  .about-content {
    display: block;
    text-align: center;
    background-color: yellow;
    min-height: 100%;
  }
  .resume-icon {
    font-size: 1rem;
  }
  .github-icon {
    font-size: 2.25rem;
  }
  .linkedin-icon {
    font-size: 2.25rem;
  }
  .email-icon {
    font-size: 2.6rem;
  }
</style>
