---
import "@fontsource-variable/inter";

import Link from "@components/Link.astro";
import DarkMode from "@components/DarkMode.astro";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="skip">
      <Link target="_self" href="#content">Skip to content</Link>
    </div>

    <nav>
      <Link target="_self" href="/" class="main">Roni Tuohino</Link>
      <DarkMode />
    </nav>
    <slot />

    <style>
      nav {
        position: sticky;
        z-index: 2;
        border-bottom: 2px solid var(--white);
        margin-bottom: -2px;
        background-color: var(--black);
        top: 0;
        padding: 0.25rem;
        transition: padding ease-in-out 200ms;
        display: flex;
        gap: 0.5rem;
        justify-content: space-between;
      }
      @media screen and (min-width: 1042px) {
        nav {
          padding: 0.25rem 0;
        }
      }
      .main {
        white-space: nowrap;
      }
      .skip {
        position: absolute;
        left: 50%;
        top: 0;
        z-index: 2;
        padding: 1rem;
        border: 2px solid var(--white);
        background-color: var(--black);
        transform: translate(-50%, -100%);
        transition: transform 200ms ease-in-out;
      }
      .skip:focus-within {
        transform: translate(-50%, calc(0% - 2px));
      }
    </style>
    <style is:global>
      :root {
        /* Colors */
        --white: hsl(0, 0%, 92%);
        --black: hsl(0, 0%, 8%);

        --border-radius: 16px;
        --shadow: rgba(0, 0, 0, 0.4) 0px 8px 24px;

        font-size: 20px;
        color: var(--white);
        background: var(--black);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        border: 0;
      }

      html {
        font-family: "Inter Variable", Ubuntu, sans-serif;
        font-weight: 600;
      }
      body {
        margin: 0 auto;
        max-width: 1024px;
        display: flex;
        flex-direction: column;
      }

      ul,
      li {
        list-style-type: none;
      }

      button {
        cursor: pointer;
      }

      a {
        text-decoration: none;
      }

      img {
        height: auto;
        max-width: 100%;
        vertical-align: middle;
        font-style: italic;
      }
    </style>
  </body>
</html>
