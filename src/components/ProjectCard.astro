---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import type { ImageMetadata } from "astro";

type Props = {
  title: string;
  href: string;
  img: ImageMetadata;
};
const { title, href, img } = Astro.props;
---

<li class="project">
  <Link href={href} target="_self" class="link">
    <figure>
      <Image alt="" src={img} class="image" />
      <div class="gradient"></div>
      <figcaption class="title">{title}</figcaption>
    </figure>
  </Link>
</li>

<style>
  .project {
    position: relative;
    max-width: var(--project-card-width);
    box-shadow: var(--shadow);
    transition: transform 100ms ease-in-out;
  }
  .project:hover,
  .project:focus-visible {
    transform: scale(1.05);
  }
  .link {
    display: block;
    font-size: 0;
  }
  .image {
    max-width: var(--project-card-width);
    max-height: var(--project-card-width);
  }
  .gradient {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 25%;
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 0.8)
    );
  }
  .title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--white);
    position: absolute;
    left: 8px;
    bottom: 4px;
  }
</style>
