---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import type { ImageMetadata } from "astro";

type Props = {
  title: string;
  href: string;
  img?: ImageMetadata;
};
const { title, href, img } = Astro.props;
---

<li class="project">
  <Link href={href} target="_self" class="link">
    <figure>
      {img && <Image alt="" src={img} class="image" />}
      <figcaption class="title">{title}</figcaption>
    </figure>
  </Link>
  <ul>
    <slot name="tags" />
  </ul>
  <ul>
    <slot name="links" />
  </ul>
</li>
