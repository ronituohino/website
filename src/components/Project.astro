---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import Bento from "./Bento.astro";
import type { ImageMetadata } from "astro";

type Props = {
  title: string;
  slug: string;
  img?: ImageMetadata;
  class?: string;
};
const { title, slug, img, class: className } = Astro.props;
---

<Bento class={className}>
  <Link href=`/projects/${slug}` target="_self" class="link">
    <div class="fade">
      <h3 class="title">{title}</h3>
    </div>
    {img && <Image transition:name={slug} alt="" src={img} class="image" />}
  </Link>
</Bento>

<style>
  .link {
    display: block;
    box-shadow: inset 3px 3px black;
  }
  .link:hover .image,
  .link:focus-visible .image {
    scale: 1.1;
  }
  .link::after {
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    box-shadow: rgba(0, 0, 0, 0.4) 0px 0px 16px 0px inset;
    position: absolute;
    top: 0;
    left: 0;
  }

  .fade {
    position: absolute;
    z-index: 1;
    bottom: 0;
    width: 100%;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0) 100%
    );
  }
  .title {
    font-weight: 400;
    padding: 0.1rem 0.3rem;
    font-size: 1rem;
    color: var(--white);
    white-space: nowrap;
  }
  @media screen and (min-width: 576px) {
    .title {
      padding: 0.3rem 0.5rem;
      font-size: 1.5rem;
    }
  }

  .image {
    object-fit: cover;
    transition: scale 200ms ease-out;
  }
</style>
