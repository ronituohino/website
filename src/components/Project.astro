---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import Bento from "./Bento.astro";
import type { ImageMetadata } from "astro";

type Props = {
  title: string;
  href: string;
  img?: ImageMetadata;
  class?: string;
};
const { title, href, img, class: className } = Astro.props;
---

<Bento class={className}>
  <Link href={href} target="_self" class="link">
    <h3 class="title">{title}</h3>
    {img && <Image alt="" src={img} class="image" />}
  </Link>
</Bento>

<style>
  .link {
    display: block;
  }

  .title {
    position: absolute;
    text-align: center;
    padding: 0.5rem;
    font-size: 1.5rem;
    color: var(--white);
    white-space: nowrap;
    bottom: 0;
  }

  .image {
    object-fit: cover;
  }
</style>
